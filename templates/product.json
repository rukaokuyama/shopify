{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "e0ea1a8d-a385-4e5b-9e77-a215b86685ac": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% for variant in product.variants %}\n{% if product.selected_or_first_available_variant.id == variant.id %}\n<strong> {{ variant.metafields.custom.small_size }}<\/strong>\n\n<strong> {{ variant.metafields.custom.medium_sizing }}<\/strong>\n\n{% endif %}\n{% endfor %}\n<script src=\"https:\/\/ajax.googleapis.com\/ajax\/libs\/jquery\/3.5.1\/jquery.min.js\"><\/script>\n<script type=\"text\/javascript\">\n  jQuery(document).ready(function($) {\n    \/\/ Get the initial URL\n    var current_url = window.location.href;\n    \n    \/\/ Check for URL changes\n    setInterval(function() {\n      var new_url = window.location.href;\n      if (new_url != current_url) {\n        \/\/ URL has changed, refresh the page\n        location.reload();\n      }\n    }, 1000);\n  });\n<\/script>"
          }
        },
        "2b8ae4f3-5e4b-4e4f-8333-75dbe748ea7b": {
          "type": "text",
          "disabled": true,
          "settings": {
            "text": "{{ product.metafields.custom.sizing_small.value }}",
            "text_style": "body"
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "e0ea1a8d-a385-4e5b-9e77-a215b86685ac",
        "2b8ae4f3-5e4b-4e4f-8333-75dbe748ea7b",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
